{
  "manifest_version": 3,
  "name": "Anti-Spoil Sport",
  "version": "1.0",
  "description": "Masque les scores sportifs sur les pages web.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}